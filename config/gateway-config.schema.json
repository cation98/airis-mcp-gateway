{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/agiletec-inc/airis-mcp-gateway/main/config/gateway-config.schema.json",
  "title": "AIRIS MCP Gateway Configuration",
  "description": "Schema for capability-driven MCP gateway configuration",
  "type": "object",
  "required": ["version", "capabilities"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "description": "Configuration version (e.g., '1.0')"
    },
    "capabilities": {
      "type": "object",
      "description": "The 7 canonical capabilities",
      "properties": {
        "search": { "$ref": "#/definitions/capability" },
        "summarize": { "$ref": "#/definitions/capability" },
        "retrieve": { "$ref": "#/definitions/capability" },
        "plan": { "$ref": "#/definitions/capability" },
        "edit": { "$ref": "#/definitions/capability" },
        "execute": { "$ref": "#/definitions/capability" },
        "record": { "$ref": "#/definitions/capability" }
      },
      "additionalProperties": false
    },
    "intent_patterns": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/intent_pattern"
      },
      "description": "Named intent patterns for routing"
    },
    "server_modes": {
      "type": "object",
      "properties": {
        "hot": { "$ref": "#/definitions/server_mode" },
        "cold": { "$ref": "#/definitions/server_mode" }
      },
      "additionalProperties": false
    },
    "routing": {
      "$ref": "#/definitions/routing_config"
    },
    "logging": {
      "$ref": "#/definitions/logging_config"
    }
  },
  "definitions": {
    "capability": {
      "type": "object",
      "required": ["description", "implementations"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Human-readable description of the capability"
        },
        "implementations": {
          "type": "array",
          "items": { "$ref": "#/definitions/implementation" },
          "minItems": 1,
          "description": "Ordered list of implementations (by priority)"
        },
        "fallback": {
          "type": "string",
          "description": "Fallback implementation name"
        }
      }
    },
    "implementation": {
      "type": "object",
      "required": ["name", "priority"],
      "properties": {
        "name": {
          "type": "string",
          "description": "MCP server name or 'native' for LLM"
        },
        "priority": {
          "type": "integer",
          "minimum": 1,
          "description": "Priority order (1 = highest)"
        },
        "mode": {
          "type": ["string", "null"],
          "enum": ["hot", "cold", null],
          "description": "Server mode (null for native LLM)"
        },
        "conditions": {
          "type": "object",
          "properties": {
            "intents": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Intent types this implementation handles"
            },
            "complexity": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["low", "medium", "high", "very_high"]
              },
              "description": "Complexity levels"
            },
            "scope": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Scope constraints"
            },
            "features": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Required features"
            },
            "persistence": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Persistence requirements"
            }
          }
        },
        "config": {
          "type": "object",
          "additionalProperties": true,
          "description": "Implementation-specific configuration"
        }
      }
    },
    "intent_pattern": {
      "type": "object",
      "required": ["patterns", "capability"],
      "properties": {
        "patterns": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Natural language patterns to match"
        },
        "capability": {
          "type": "string",
          "enum": ["search", "summarize", "retrieve", "plan", "edit", "execute", "record"],
          "description": "Target capability"
        },
        "implementation_hint": {
          "type": "string",
          "description": "Preferred implementation for this intent"
        }
      }
    },
    "server_mode": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "servers": {
          "type": "array",
          "items": { "type": "string" }
        },
        "characteristics": {
          "type": "object",
          "properties": {
            "startup_time": { "type": "string" },
            "token_cost": { "type": "string" }
          }
        }
      }
    },
    "routing_config": {
      "type": "object",
      "properties": {
        "default_capability": {
          "type": "string",
          "enum": ["search", "summarize", "retrieve", "plan", "edit", "execute", "record"]
        },
        "default_implementation": {
          "type": "string"
        },
        "thresholds": {
          "type": "object",
          "properties": {
            "high_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
            "medium_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
            "low_confidence": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "fallback_chain": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "logging_config": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"]
        },
        "include_routing_decisions": { "type": "boolean" },
        "include_intent_detection": { "type": "boolean" }
      }
    }
  }
}
