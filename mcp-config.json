{
  "mcpServers": {
    "airis-agent": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/agiletec-inc/airis-agent",
        "airis-agent-mcp"
      ],
      "env": {},
      "enabled": true,
      "mode": "hot"
    },
    "airis-workspace": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/agiletec-inc/airis-agent",
        "airis-workspace-mcp"
      ],
      "env": {},
      "enabled": false,
      "mode": "cold"
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {},
      "enabled": true,
      "mode": "cold"
    },
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ],
      "env": {},
      "enabled": true,
      "mode": "cold"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/workspace/host"
      ],
      "env": {},
      "enabled": false,
      "mode": "cold"
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git"
      ],
      "env": {},
      "enabled": false,
      "mode": "cold"
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {},
      "enabled": true,
      "mode": "hot"
    },
    "mindbase": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/agiletec-inc/mindbase#subdirectory=mcp",
        "mindbase-mcp"
      ],
      "env": {
        "MINDBASE_URL": "${MINDBASE_URL:-http://localhost:18003}"
      },
      "enabled": true,
      "mode": "hot"
    },
    "airis-mcp-gateway-control": {
      "command": "node",
      "args": [
        "/app/gateway-control/index.js"
      ],
      "env": {
        "API_URL": "http://localhost:8000"
      },
      "enabled": true,
      "mode": "hot"
    },
    "airis-commands": {
      "command": "node",
      "args": [
        "/app/airis-commands/index.js"
      ],
      "env": {
        "MCP_CONFIG_PATH": "/app/mcp-config.json",
        "PROFILES_DIR": "/app/profiles"
      },
      "enabled": true,
      "mode": "hot"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {},
      "enabled": true,
      "mode": "cold"
    },
    "serena": {
      "profile": "${SERENA_MODE:-serena-remote}",
      "env": {},
      "enabled": true,
      "mode": "cold"
    },
    "tavily": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.tavily.com/mcp/?tavilyApiKey=${TAVILY_API_KEY}"
      ],
      "env": {
        "TAVILY_API_KEY": "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"
      },
      "enabled": true,
      "mode": "cold"
    },
    "time": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-time"
      ],
      "env": {},
      "enabled": false,
      "mode": "cold"
    },
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--access-token",
        "${SUPABASE_ACCESS_TOKEN}"
      ],
      "env": {},
      "enabled": false,
      "mode": "cold"
    }
  },
  "profiles": {
    "serena-local": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--transport",
        "stdio"
      ]
    },
    "serena-remote": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "http://serena:8000/sse",
        "--allow-http"
      ]
    }
  },
  "log": {
    "level": "info"
  }
}
