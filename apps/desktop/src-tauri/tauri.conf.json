{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AIRIS MCP Gateway",
  "version": "1.3.0",
  "identifier": "com.agiletec.airis-mcp-gateway",
  "build": {
    "frontendDist": "../settings/out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AIRIS MCP Gateway",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "AIRIS MCP Gateway"
    }
  },
  "bundle": {
    "active": true,
    "targets": "dmg",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.agiletec.airis-mcp-gateway",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "exceptionDomain": "localhost"
    }
  }
}
